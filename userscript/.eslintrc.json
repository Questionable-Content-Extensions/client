{
    "extends": ["react-app"],
    "rules": {
        "no-unused-vars": [
            "warn",
            {
                "argsIgnorePattern": "^_",
                "varsIgnorePattern": "^_"
            }
        ]
    },
    "overrides": [
        {
            "files": ["**/*.ts?(x)"],
            "rules": {
                "@typescript-eslint/no-unused-vars": ["off"]
            }
        },
        {
            "files": ["**/*.stories.*"],
            "rules": {
                "import/no-anonymous-default-export": "off"
            }
        }
    ]
}
