{
    "extends": ["react-app"],
    "ignorePatterns": ["dist/**", "build/**"],
    "rules": {
        "no-unused-vars": "off"
    },
    "overrides": [
        {
            "files": ["**/*.ts?(x)"],
            "rules": {
                "@typescript-eslint/no-unused-vars": [
                    "warn",
                    {
                        "argsIgnorePattern": "^_",
                        "varsIgnorePattern": "^_"
                    }
                ]
            }
        },
        {
            "files": ["**/*.stories.*"],
            "rules": {
                "import/no-anonymous-default-export": "off"
            }
        }
    ]
}
